@using System.Data
@using Hunarmis.Models
@{
    DataTable dt = new DataTable();
    if (Model != null)
    {
        dt = Model;
    }
}
<style>
    table.dataTable th.dt-type-numeric, table.dataTable th.dt-type-date, table.dataTable td.dt-type-numeric, table.dataTable td.dt-type-date {
         text-align: center !important; 
    }
</style>

<div class="table-data">
    <div class="table-responsive">
        @if (dt.Rows.Count > 0)
        {
            <h4s> No Of Participants : <b>@dt.Rows.Count</b> &nbsp;&nbsp;&nbsp;&nbsp; No Of Calls :<b>@dt.Compute("Sum([Total Calls])",string.Empty)</b> </h4s>
        }
        <div id="demo-dt-basic_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
            <table id="ListDataTable" class="table table-striped table-bordered text-uppercase " width="100%">
                <thead>
                    <tr role="row">
                        @foreach (DataColumn col in dt.Columns)
                        {
                            <th>@col.ColumnName</th>
                        }
                    </tr>
                </thead>
                <tbody id="tbl-body">
                    @{
                        if (dt.Rows.Count > 0)
                        {
                            foreach (DataRow row in dt.Rows)
                            {
                                <tr>
                                    @foreach (DataColumn col in dt.Columns)
                                    {
                                        <td>@row[col.ColumnName]</td>
                                    }
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="6" class="text-danger"><strong> Record Not Found !!</strong></td></tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
