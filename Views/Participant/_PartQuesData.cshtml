@using System.Data
@using Hunarmis.Manager
@{
    DataTable dt = new DataTable();
    dt = Model;
}
<style>
    table.dataTable thead > tr > th.sorting, table.dataTable thead > tr > th.sorting_asc, table.dataTable thead > tr > th.sorting_desc, table.dataTable thead > tr > th.sorting_asc_disabled, table.dataTable thead > tr > th.sorting_desc_disabled, table.dataTable thead > tr > td.sorting, table.dataTable thead > tr > td.sorting_asc, table.dataTable thead > tr > td.sorting_desc, table.dataTable thead > tr > td.sorting_asc_disabled, table.dataTable thead > tr > td.sorting_desc_disabled {
        padding-right: 0px !important;
    }
</style>
<div class="bg-light rounded h-100 p-4">
    <div class="table-responsive">
        <table class="table table-bordered table-striped" id="tbl">
            <thead class="text-center">
                <tr>
                    <th class="text-center tblth">Srno.</th>
                    <th class="text-center tblth">Month/Year</th>
                    <th class="text-center tblth">Center Name</th>
                    <th class="text-center tblth">Registration ID <br /><strong class="vw">View</strong></th>
                    <th class="text-center tblth">Name</th>
                    <th class="text-center tblth">Phone No</th>
                    <th class="text-center tblth">Email ID</th>
                    <th class="text-center tblth">Batch Name</th>
                    <th class="text-center tblth">Batch Start Date</th>
                    <th class="text-center tblth">Batch End Date</th>
                    <th class="text-center tblth">Reported By</th>
                    @*<th class="text-center">Edit</th>*@
                </tr>
            </thead>
            <tbody>
                @{
                    if (dt.Rows.Count > 0)
                    {
                        int srno = 1;
                        foreach (DataRow dr in dt.Rows)
                        {
                            <tr>
                                <td class="text-center">@(srno++)</td>
                                <td class="text-center bg-warning text-white"><strong>@(dr["Ques_Month"] + "/" +dr["Ques_Year"])</strong></td>
                                <td class="text-left">@dr["TrainingCenter"]</td>
                                <td class="text-center  bg-success text-white">
                                    <a href="~/Participant/QuesResponse?PartQuestId=@dr["ParticipantQuestionId"]&PartId=@dr["ID"]&M=@dr["QuesMonth"]&Y=@dr["QuesYear"]" target="_blank"><strong style="text-decoration:underline !important;">@dr["RegID"]</strong></a>
                                    @*<a href="javascript:void(0);" onclick="QuesResDisplay('@dr["ParticipantQuestionId"]','@dr["ID"]','@dr["QuesMonth"]','@dr["QuesYear"]')" target="_blank"><strong style="text-decoration:underline !important;">@dr["RegID"]</strong></a>*@
                                </td>
                                <td class="text-left">@dr["FullName"]</td>
                                <td class="text-center">@dr["PhoneNo"]</td>
                                <td class="text-left">@dr["EmailID"]</td>
                                <td class="text-left">@dr["BatchName"]</td>
                                <td class="text-center">@dr["BatchStartDate"]</td>
                                <td class="text-center">@dr["BatchEndDate"]</td>
                                <td class="text-center">@dr["ReportedBy"]</td>
                                @*<td class="text-center">
                                        <a href="~/Participant/AddParticipant?Id=@dr["ID"]" class="btn btn-primary btn-sm"><i class="fa fa-edit"></i></a>
                                    </td>*@
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="10" class="text-center"><strong class="text-danger">Record Not Found !!</strong></td>
                        </tr>
                    }
                }
            </tbody>

        </table>
    </div>

</div>