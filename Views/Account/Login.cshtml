@using Hunarmis.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = null;
}
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,minimum-scale=1,initial-scale=1">
    <meta content="IE=Edge" http-equiv="X-UA-Compatible">
    <title>Hunar Login</title>
    <meta name="robots" content="all">
    <meta name="googlebot" content="index, follow">
    <link id="Link" href="image/favicon.ico" rel="icon" type="image/x-icon" />
    <!-- Design -->
    <link href="css/design.css" rel="stylesheet" type="text/css" media="screen" />
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: "Outfit", sans-serif;
            background: #DCF4FE;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        img {
            width: 100%;
            height: auto;
        }

        .login-box {
            display: flex;
            gap: 20px;
            background: #fff;
            border-radius: 10px;
            max-width: 800px;
            box-shadow: 0 0 11px rgba(0, 0, 0, 0.2);
        }

        .login-field, .login-photo {
            flex: 1;
        }

        .login-field, .input-box {
            display: flex;
            flex-direction: column;
            justify-content: center;
            text-align: left;
        }

        .input-box {
            margin-bottom: 20px;
            width: 100%;
        }
        .login-content {
            width: 300px;
            margin: auto;
        }
        .login-content img  {
            text-align: center;
            display: block;
            margin: auto
        }
        .input-box label {
            text-align: left;
            padding-bottom: 6px;
            font-size: 14px;
        }

        .form-control {
            margin-bottom: 4px;
            width: 100%;
            padding: 9px 15px;
            border-radius: 20px;
            border: 1px solid #a09f9f;
            outline: none;
        }
            .form-control:hover, .form-control:focus {
                border: 1px solid #7663F1;
            }
            .text-danger {
                color: #FE4F46;
                font-size: 13px;
            }
        .btn-login {
            padding: 12px 0;
            border-radius: 20px;
            background: #8A77F4;
            color: #fff;
            width: 100%;
            cursor: pointer;
            border: none;
            margin-top: 20px;
            transition: background-color 0.5s ease;
            font-size: 15px;
        }
            .btn-login:hover {
                background: #5C41F4;
            }
        .check-label {
            font-size: 14px;
            color: #444444;
        }
        .login-icon {
            width: 70px;
        }
        .title {
            text-align: center;
            position: relative;
            font-size: 23px;
            margin: 0 0 20px;
            color: #5B2C54;
            text-transform: uppercase;
            font-weight: bold;
        }
        @@media screen and (max-width: 768px) {
            .login-photo {
                display: none;
            }
            .login-box {
                padding: 15px
            }
        }
    </style>
</head>
<body>
    <div>
        @*<h4 class="title">
            <img src="~/Content/images/pci-trans-logo.png" alt="Login Icon" class="login-icon" />
            <br />
        </h4>*@
        <div class="login-box">
            <div id="loginForm" class="login-field">
                <div class="login-content">
                    <img src="~/Content/images/pci-trans-logo.png" alt="Logo" class="login-icon" />
                    @*<img src="~/Content/login/login-icon.png" alt="Login Icon" class="login-icon" />*@

                    <h2>@ViewBag.Title.</h2>
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="input-box">
                            @Html.LabelFor(m => m.Email)
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Enter user name" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="input-box">
                            @Html.LabelFor(m => m.Password)
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Enter password" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="check-box">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe, new { @class = "check-label" })
                        </div>
                        <input type="submit" value="Log in" class="btn-login" />
                    }
                </div>
            </div>
            <div class="login-photo">
                <img src="~/Content/login/login-photo.jpg" alt="Login Photo" />
            </div>
        </div>
    </div>
    
</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
