@using Hunarmis.Models
@model Hunarmis.Models.ParticipantLoginModel
@{
    ViewBag.Title = "Log in";
    Layout = null;
    Model.RandomValue = TempData["RV"] != null ? TempData["RV"].ToString() : null;
}
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,minimum-scale=1,initial-scale=1">
    <meta content="IE=Edge" http-equiv="X-UA-Compatible">
    <title>Hunar Login</title>
    <meta name="robots" content="all">
    <meta name="googlebot" content="index, follow">
    <link id="Link" href="image/favicon.ico" rel="icon" type="image/x-icon" />
    <!-- Design -->
    <link href="css/design.css" rel="stylesheet" type="text/css" media="screen" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&display=swap" rel="stylesheet">
    <style>
        body {
            margin: 0px;
            padding: 0px;
            font-family: "Outfit", sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            background: #EDF1F7
        }

        .cool-login {
            margin: auto;
            width: 900px;
            display: flex;
            align-items: center;
            height: 500px;
            background: #fff;
            border-radius: 10px;
            padding: 10px;
            box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 6px -1px, rgba(0, 0, 0, 0.06) 0px 2px 4px -1px;
        }

        .login-sider, .post-login {
            flex: 1;
        }

        .login-sider {
            display: block;
            height: 100%;
            top: 0px;
            margin-top: 0px;
            overflow: inherit;
            background: url('../../Content/images/hunar-participants.jpg')top center;
            background-size: cover;
            border-radius: 10px 0 0 10px;
        }

        .post-login {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .group-form {
            width: 100%;
            margin-bottom: 20px
        }

        label {
            display: block;
        }

        a {
            color: #275BC3
        }

        h1, h3, p {
            text-align: center;
        }

        h1 {
            font-size: 25px;
            color: #275BC3;
        }

        .form-control {
            margin-bottom: 4px;
            width: 100%;
            background: #F9FBFC;
            padding: 11px 15px;
            border: 1px solid #F1F0F6;
            border-radius: 5px;
            outline: none;
        }

        .login-btn {
            padding: 12px 0;
            background: #275BC3;
            color: #fff;
            width: 100%;
            cursor: pointer;
            border: none;
            transition: background-color 0.5s ease;
            font-size: 15px;
            border-radius: 5px;
        }

            .login-btn:hover {
                background: #e17b19
            }

        @@media all and (max-width: 768px) {
            body {
                margin: 0px;
                padding: 0px;
                font-family: "Outfit", sans-serif;
                background: url('../../Content/images/hunar-participants.jpg')top right;
            }

            .login-sider {
                display: none
            }

            .post-login {
                background: rgba(255,255,255,0.6) !important
            }
        }
    </style>
</head>
<body>
    <div class="cool-login">
        <div class="login-sider">

        </div>
        <div class="post-login">
            <div id="post-login">
                <h1 class="text-capitalize"> Hunar: Pathways to Progress</h1>
                <h3>Login</h3>
                <p>Enter your username and password to login</p>
                @using (Html.BeginForm("Login", "ParticipantUser", new { RandomValue = TempData["RV"] }, FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.RandomValue)
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                
                <div class="group-form">
                    @*@Html.LabelFor(m => m.EmailID)*@
                    @Html.TextBoxFor(m => m.EmailID, new { @class = "form-control", @placeholder = "Enter user name", min = "5", max = "300", maxlength = "300" })
                    @Html.ValidationMessageFor(m => m.EmailID, "", new { @class = "text-danger" })
                </div>
                <div class="group-form">
                    @*@Html.LabelFor(m => m.Password)*@
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Enter password",min="12",max="12",maxlength="12" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
                <input type="submit" value="Submit" class="login-btn">
                @*<p>
                    <a href="#">Forgot Password ?</a>
                </p>*@
                }
            </div>            
        </div>
    </div>
    
</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
