                TACIdarr = TACIdarr.join(',');
            }
            else {
                toastr.error("Error", 'Please choose one Training Center');
            }

            if (UserId && IsCheck) {
                $.ajax({
                    url: document.baseURI + "/Master/CUUserMapped",
                    type: "Post",
                    data: { 'MappedId': MappedId, 'UserId': UserId, 'RoleId': RoleId, 'TACId': TACIdarr },
