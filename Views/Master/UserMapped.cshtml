        function CheckUnchecked(cur) {
            debugger;
            if ($(cur).attr('id') == 'selectAll') {
                $('#DataList tbody tr .check').each(function (i, item) {
                    $(item).prop('checked', $(cur).prop('checked'));
                });
            } else {
                var isallChecked = true;
                $('#DataList tbody tr .check').each(function (i, item) {
